{
    "rules": [
      {
        "id": 1,
        "name": "Check if website is secure",
        "description": "Checks if website is using HTTPS protocol",
        "conditions": [
          {
            "type": "url",
            "value": "https://"
          }
        ],
        "actions": [
          {
            "type": "show_message",
            "message": "This website is secure"
          }
        ]
      },
      {
        "id": 2,
        "name": "Check if website has valid SSL certificate",
        "description": "Checks if website has valid SSL certificate",
        "conditions": [
          {
            "type": "url",
            "value": "https://"
          },
          {
            "type": "javascript",
            "value": "window.location.protocol == 'https:' && window.location.hostname != 'localhost'"
          }
        ],
        "actions": [
          {
            "type": "show_message",
            "message": "This website has a valid SSL certificate"
          }
        ]
      }
    ]
  }